@page "/studentdetails/{rollNo}"
@page "/studentdetails"
@inherits StudentDetailsBase

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header text-center">
                <h1>@Student.Name</h1>
            </div>

            <div class="card-body text-center">
                @*<img class="card-img-top" src="@Employee.PhotoPath" />*@

                <h4>Standard : @Student.Standard</h4>
                <h4>Roll No : @Student.RollNo</h4>
                <h4>Age : @Student.Age</h4>
                <h4>Height : @Student.Height</h4>
                <h4>Address : @Student.Address</h4>

            </div>
            <div class="card-footer text-center">
                <a href="/" class="btn btn-primary">Back</a>
                <a href="@($"/editstudent/{Student.RollNo}")" class="btn btn-primary">Edit</a>
                <button href="#" class="btn btn-danger" type="button" @onclick="Delete_Click">Delete</button>
            </div>


            @*@if (EditStudentModel.RollNo > 0)
            {
                <button class="btn btn-danger" type="button" @onclick="Delete_Click">Delete</button>
            }*@

            <Confirm @ref="DeleteConfirmation" ConfirmationChanged="ConfirmDelete_Click"
                     ConfirmationMessage=@($"Are you sure you want to delete \"{Student.Name}\"")>
            </Confirm>



        </div>
    </div>
</div>
