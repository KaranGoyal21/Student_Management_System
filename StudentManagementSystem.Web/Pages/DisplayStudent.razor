@inherits DisplayStudentBase

<div class="card m-3" style="min-width: 18rem; max-width:30.5%;">

    <div class="card-header">
        <h3>
            @Student.Name
        </h3>
    </div>

    <div class="card-footer text-center">
        <a href="@($"/studentdetails/{Student.RollNo}")" class="btn btn-primary m-1">View</a>
        @*<button class="btn btn-primary m-1">
                view
            </button>*@

        <a href="@($"/editstudent/{Student.RollNo}")" class="btn btn-dark m-1">Edit</a>

        <button href="#" class="btn btn-danger m-1" @onclick="Delete_Click">Delete</button>
    </div>

</div>
<Confirm @ref="DeleteConfirmation" ConfirmationChanged="ConfirmDelete_Click"
         ConfirmationMessage=@($"Are you sure you want to delete \"{Student.Name}\"")>
</Confirm>
