@page "/editstudent/{rollNo}"
@page "/editstudent"

@inherits EditStudentBase

<EditForm Model="@EditStudentModel" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <h3>@PageHeaderText</h3>
    <hr />
    <ValidationSummary />
    <div class="form-group row">
        <label for="Standard" class="col-sm-2 col-form-label">
            Standard
        </label>
        <div class="col-sm-10">
            <InputNumber id="Standard" @bind-Value="EditStudentModel.Standard" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label for="RollNo" class="col-sm-2 col-form-label">
            Roll No
        </label>
        <div class="col-sm-10">
            <InputNumber id="RollNo" @bind-Value="EditStudentModel.RollNo" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label for="Name" class="col-sm-2 col-form-label">
            Name
        </label>
        <div class="col-sm-10">
            <InputText id="Name" class="form-control" placeholder="Name"
                       @bind-Value="EditStudentModel.Name" />
            <ValidationMessage For="@(()=> EditStudentModel.Name)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="Age" class="col-sm-2 col-form-label">
            Age
        </label>
        <div class="col-sm-10">
            <InputNumber id="Age" @bind-Value="EditStudentModel.Age" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label for="Height" class="col-sm-2 col-form-label">
            Height
        </label>
        <div class="col-sm-10">
            <InputNumber id="Height" @bind-Value="EditStudentModel.Height" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label for="Address" class="col-sm-2 col-form-label">
            Address
        </label>
        <div class="col-sm-10">
            <InputText id="Address" class="form-control" placeholder="Address"
                       @bind-Value="EditStudentModel.Address" />
        </div>
    </div>

    <button class="btn btn-primary" type="submit">Submit</button>

    @if (EditStudentModel.RollNo > 0)
    {
        <button class="btn btn-danger" type="button" @onclick="Delete_Click">Delete</button>
    }
</EditForm>

<Confirm @ref="DeleteConfirmation" ConfirmationChanged="ConfirmDelete_Click"
             ConfirmationMessage=@($"Are you sure you want to delete \"{EditStudentModel.Name}\"")>
    </Confirm>